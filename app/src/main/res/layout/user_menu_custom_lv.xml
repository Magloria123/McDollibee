<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/userRow"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/textView4"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/userIDTV"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:text="ID"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:textColor="#292929" />

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:breakStrategy="balanced"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="Username"
            android:textColor="#292929" />
        <TextView
            android:id="@+id/userPassTV"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="Password"
            android:textColor="#292929" />
        <TextView
            android:id="@+id/userFirstNameTV"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="First Name"
            android:textColor="#292929" />
        <TextView
            android:id="@+id/userLastNameTV"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="Last Name"
            android:textColor="#292929" />
        <TextView
            android:id="@+id/userAgeTV"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="21"
            android:textColor="#292929" />

        <TextView
            android:id="@+id/userAddressTV"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:background="@drawable/white_table_cells_non_round"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="Brntig Calape Bohol"
            android:textColor="#292929" />

        <TextView
            android:id="@+id/userContactTV"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:text="09750229443"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"

            android:textColor="#292929" />
    </LinearLayout>

</LinearLayout>