<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@drawable/listview_items_round_radius"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mealPicSelected"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:foregroundGravity="center"
            android:padding="15dp"

            tools:srcCompat="@tools:sample/avatars" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mealNameChoose"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingTop="12dp"
                    android:gravity="left|top"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:autoSizeTextType="uniform"
                    android:autoSizePresetSizes="@array/text_sizes2"
                    android:textColor="#1E1E1E" />

                <ImageView
                    android:id="@+id/deleteMeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_action_delete" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mealPriceChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:text="Price"
                    android:maxLines="1"
                    android:autoSizePresetSizes="@array/text_sizes2"
                    android:textSize="14sp"
                    android:textColor="@color/jollibee"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:gravity="right"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/subMealQty"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:background="#EAEAEA"
                        android:src="@drawable/ic_action_minus2" />

                    <EditText
                        android:id="@+id/customMealQty"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/addMealQty"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:background="#EAEAEA"
                        android:src="@drawable/ic_action_plus" />
                    <!--                    app:srcCompat="@drawable/ic_action_minus" -->

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>