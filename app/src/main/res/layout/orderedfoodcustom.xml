<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@drawable/listview_items_round_radius"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/orderPicOrders"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:foregroundGravity="center"
            android:padding="15dp"

            tools:srcCompat="@tools:sample/avatars" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/orderIdOrdered"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingTop="12dp"
                    android:gravity="left|top"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:autoSizeTextType="uniform"
                    android:autoSizePresetSizes="@array/text_sizes2"
                    android:textColor="#1E1E1E" />

                <TextView
                    android:id="@+id/orderStatusOrdered"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizePresetSizes="@array/text_sizes2"
                    android:autoSizeTextType="uniform"
                    android:gravity="right|top"
                    android:paddingTop="12dp"
                    android:layout_marginRight="12dp"
                    android:text="TextView"
                    android:textColor="#1E1E1E" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderCostOrdered"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:text="Price"
                    android:maxLines="1"
                    android:autoSizePresetSizes="@array/text_sizes2"
                    android:textSize="14sp"
                    android:textColor="@color/jollibee"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="right"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderReceivedOrdered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:paddingTop="3dp"
                        android:gravity="center"
                        android:background="@drawable/background_with_shadow"
                        android:backgroundTint="@color/jollibee"
                        android:fontFamily="@font/baloo_bhaijaan"
                        android:paddingHorizontal="8dp"
                        android:text="Order Received"
                        android:textAllCaps="false"
                        android:textColor="@color/white"

                        >

                    </TextView>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>