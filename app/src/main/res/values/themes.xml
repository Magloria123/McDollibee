<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.McJollibeeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jollibee</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:textColor">#000000</item>
        <!-- Customize your theme here. -->
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="windowActionBar">true</item>-->
<!--        <item name="android:windowFullscreen">false</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">\
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>

    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="MyTheme" parent="android:Theme">
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/jollibee</item>
        <item name="android:background">@color/jollibee</item>
    </style>

</resources>