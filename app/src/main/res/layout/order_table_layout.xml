<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/orderRow"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/textView4"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/orderIdOrders"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:text="Order ID"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:textColor="#292929" />
        <TextView
            android:id="@+id/customerIdOrders"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:text="Customer ID"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:textColor="#292929" />

        <TextView
            android:id="@+id/dateAndTimeOrders"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:breakStrategy="balanced"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="Date &amp; Time"
            android:textColor="#292929" />
        <TextView
            android:id="@+id/attendantIdOrders"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="Attendant ID No"
            android:textColor="#292929" />
        <TextView
            android:id="@+id/paymentMethodOrders"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="Payment Method"
            android:textColor="#292929" />

        <TextView
            android:id="@+id/orderCostOrders"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:background="@drawable/white_table_cells_non_round"
            android:paddingLeft="3dp"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"
            android:text="Order Cost"
            android:textColor="#292929" />

        <TextView
            android:id="@+id/statusOrders"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_table_cells_non_round"
            android:gravity="center|left"
            android:paddingLeft="2dp"
            android:text="Status"
            android:paddingRight="0.1dp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizePresetSizes="@array/text_sizes2"

            android:textColor="#292929" />
    </LinearLayout>

</LinearLayout>